<div class="container">
    <div class="row justify-content-center">
        <div class="col-10 col-md-8 col-lg-6">
            <ul class="list-group">
                <% @tasks.each do |id, task| %>
                <li id="<%= id %>" class="list-group-item d-flex justify-content-between align-items-center <%= task[1]!=0 ? 'list-group-item-danger' : '' %>">
                    <%= task[0] %>
                    <span class="badge bg-primary rounded-pill"><%= task[1] %></span>
                </li>
                <% end %>
            </ul>
        </div>
    </div>
</div>